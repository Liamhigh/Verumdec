<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Verumdec"
        android:largeHeap="true"
        tools:targetApi="34">
        
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Verumdec">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.AnalysisActivity"
            android:exported="false"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/Theme.Verumdec" />
            
        <activity
            android:name=".ui.ReportActivity"
            android:exported="false"
            android:parentActivityName=".ui.AnalysisActivity"
            android:theme="@style/Theme.Verumdec" />

        <activity
            android:name=".ui.VerifyDocumentActivity"
            android:exported="false"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/Theme.Verumdec"
            android:label="@string/title_verify_document" />

        <activity
            android:name=".ui.EvidenceTimelineActivity"
            android:exported="false"
            android:parentActivityName=".ui.AnalysisActivity"
            android:theme="@style/Theme.Verumdec"
            android:label="@string/title_timeline" />

        <activity
            android:name=".ui.ForensicReportViewerActivity"
            android:exported="false"
            android:parentActivityName=".ui.AnalysisActivity"
            android:theme="@style/Theme.Verumdec"
            android:label="@string/title_report_viewer" />

        <!-- File Provider for sharing reports -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        
    </application>

</manifest>
