<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_sm"
    android:layout_marginVertical="@dimen/spacing_xs"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_md">

        <!-- Document icon -->
        <ImageView
            android:id="@+id/iconDocument"
            android:layout_width="@dimen/icon_md"
            android:layout_height="@dimen/icon_md"
            android:src="@drawable/ic_document"
            android:contentDescription="@string/cd_document_icon"
            app:tint="@color/primary" />

        <!-- Document info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/spacing_md"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_body"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textFileType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_caption" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="@dimen/spacing_sm"
                    android:background="@drawable/circle_timeline" />

                <ImageView
                    android:id="@+id/iconStatus"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_pending"
                    android:contentDescription="@string/cd_status_icon" />

                <TextView
                    android:id="@+id/textStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:textSize="@dimen/text_caption" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:text="@string/btn_verify"
                android:textSize="@dimen/text_caption"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

        <!-- Remove button -->
        <ImageButton
            android:id="@+id/btnRemove"
            android:layout_width="@dimen/icon_sm"
            android:layout_height="@dimen/icon_sm"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cd_remove_document"
            android:src="@drawable/ic_delete"
            app:tint="@color/error" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
