<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/spacing_sm">

    <!-- Timeline line and node -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginEnd="@dimen/spacing_md">

        <View
            android:id="@+id/viewTopLine"
            android:layout_width="@dimen/timeline_line_width"
            android:layout_height="@dimen/spacing_lg"
            android:background="@color/timeline_line" />

        <View
            android:id="@+id/viewTimelineNode"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@drawable/circle_timeline" />

        <View
            android:id="@+id/viewBottomLine"
            android:layout_width="@dimen/timeline_line_width"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/timeline_line" />

    </LinearLayout>

    <!-- Event content -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_sm">

            <!-- Date and time row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_caption"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_caption" />

            </LinearLayout>

            <!-- Event type -->
            <TextView
                android:id="@+id/textEventType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_body"
                android:textStyle="bold" />

            <!-- Description -->
            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_body"
                android:maxLines="3"
                android:ellipsize="end" />

            <!-- Entities and significance -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textEntities"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/text_caption"
                    android:ellipsize="end"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/textSignificance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_caption"
                    android:textStyle="bold"
                    android:paddingHorizontal="@dimen/spacing_sm"
                    android:paddingVertical="2dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
